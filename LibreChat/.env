# LibreChat Environment Variables
JWT_SECRET=librechat_jwt_secret_key_123456789
JWT_REFRESH_SECRET=librechat_jwt_refresh_secret_key_123456789
ENCRYPTION_KEY=librechat_encryption_key_123456789
LIBRECHAT_SECRET_KEY=librechat_secret_key_123456789
SECRET_KEY=librechat_secret_key_123456789
CRYPTO_KEY=librechat_crypto_key_123456789
APP_SECRET=librechat_app_secret_123456789
CRYPT_KEY=librechat_crypt_key_123456789
NODE_ENV=production

# The specific variables needed by crypto.js
CREDS_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
CREDS_IV=0123456789abcdef0123456789abcdef

# MongoDB connection
MONGO_URI=mongodb://mongodb:27017/librechat

# Allow registration
ALLOW_REGISTRATION=true

# Allow login without email verification
ALLOW_UNVERIFIED_EMAIL_LOGIN=true

# Social Login Configuration
# Enable social login providers
ALLOW_SOCIAL_LOGIN=true

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3080/oauth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3080/oauth/github/callback

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_CALLBACK_URL=http://localhost:3080/oauth/discord/callback