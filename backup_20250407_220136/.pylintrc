[MASTER]
ignore=CVS
ignore-patterns=
persistent=yes
load-plugins=
jobs=1
unsafe-load-any-extension=no
extension-pkg-whitelist=
fail-under=10.0

[MESSAGES CONTROL]
disable=
    missing-docstring,
    invalid-name,
    line-too-long,
    too-many-arguments,
    too-many-locals,
    too-many-statements,
    too-many-branches,
    too-many-instance-attributes,
    too-few-public-methods,
    fixme,
    broad-except,
    duplicate-code,
    no-self-use

[FORMAT]
max-line-length=88
indent-string='    '
indent-after-paren=4
expected-line-ending-format=LF

[DESIGN]
max-args=6
max-attributes=12
max-bool-expr=5
max-branches=12
max-locals=15
max-returns=6
max-statements=50
max-parents=7
